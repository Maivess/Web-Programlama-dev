@model BerberYonetimSistemi.Models.UzmanlikAlani

@{
    ViewData["Title"] = "Yeni Kategori";
}

<div class="container mt-5">
    <h4>Yeni Uzmanlık Alanı / Kategori Ekle</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UzmanlikAlaniAdi" class="control-label">Kategori Adı</label>
                    <input asp-for="UzmanlikAlaniAdi" class="form-control" placeholder="Örn: Fitness, Pilates" />
                    <span asp-validation-for="UzmanlikAlaniAdi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}