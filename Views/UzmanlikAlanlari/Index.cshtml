@model IEnumerable<BerberYonetimSistemi.Models.UzmanlikAlani>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Kategoriler / Uzmanlık Alanları</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Ekle</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th>Hizmet Sayısı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.UzmanlikAlaniAdi</td>
                    <td>
                        @if (item.Hizmetler != null)
                        {
                            <span class="badge bg-secondary">@item.Hizmetler.Count</span>
                        }
                        else
                        {
                            <span>0</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UzmanlikAlaniId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.UzmanlikAlaniId" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>