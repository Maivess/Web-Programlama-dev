@model BerberYonetimSistemi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4>Yeni Randevu Oluştur</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Salon</label>
                            <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Antrenör</label>
                            <select asp-for="AntrenorId" class="form-control" asp-items="ViewBag.AntrenorId"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Hizmet</label>
                            <select asp-for="HizmetId" class="form-control" asp-items="ViewBag.HizmetId"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Kullanıcı (Üye)</label>
                            <select asp-for="KullaniciId" class="form-control" asp-items="ViewBag.KullaniciId"></select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Tarih" class="control-label fw-bold">Tarih</label>
                                <input asp-for="Tarih" class="form-control" type="date" />
                                <span asp-validation-for="Tarih" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Saat" class="control-label fw-bold">Saat</label>
                                <input asp-for="Saat" class="form-control" type="time" />
                                <span asp-validation-for="Saat" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Randevuyu Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}