@model IEnumerable<BerberYonetimSistemi.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Randevu Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Randevu</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Salon</th>
                <th>Antrenör</th>
                <th>Hizmet</th>
                <th>Durum</th>
                <th>Yönetim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tarih.ToShortDateString()</td>
                    <td>@item.Saat</td>
                    <td>@item.Salon?.SalonAdi</td>
                    <td>@item.Antrenor?.AntrenorAdi @item.Antrenor?.AntrenorSoyadi</td>
                    <td>@item.Hizmet?.HizmetAdi</td>
                    <td>
                        @if (item.OnaylandiMi)
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Beklemede</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RandevuId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.RandevuId" class="btn btn-sm btn-info text-white">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.RandevuId" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>