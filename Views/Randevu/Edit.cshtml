@model BerberYonetimSistemi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container mt-5">
    <h4>Randevu Düzenle</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RandevuId" />
                <input type="hidden" asp-for="KullaniciId" />

                <div class="form-group mb-3">
                    <label class="control-label">Salon</label>
                    <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                    <span asp-validation-for="SalonId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Antrenör</label>
                    <select asp-for="AntrenorId" class="form-control" asp-items="ViewBag.AntrenorId"></select>
                    <span asp-validation-for="AntrenorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Hizmet</label>
                    <select asp-for="HizmetId" class="form-control" asp-items="ViewBag.HizmetId"></select>
                    <span asp-validation-for="HizmetId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Tarih" class="control-label"></label>
                        <input asp-for="Tarih" class="form-control" type="date" />
                        <span asp-validation-for="Tarih" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Saat" class="control-label"></label>
                        <input asp-for="Saat" class="form-control" type="time" />
                        <span asp-validation-for="Saat" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}