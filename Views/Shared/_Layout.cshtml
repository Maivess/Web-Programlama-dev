<!DOCTYPE html>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProFit Spor Salonu</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BerberYonetimSistemi.styles.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="YapayZeka" asp-action="Index">
            <i class="fas fa-robot text-warning"></i> AI Analiz
        </a>
    </li>


    <style>
        /* Navbar Rengi - Spor Salonuna Uygun Koyu Gri/Siyah */
        .navbar-custom {
            background-color: #212529;
        }

        .navbar {
            text-align: center;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .navbar-brand {
            text-align: center;
            display: flex;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 5px 15px;
            border-radius: 5px;
            color: black !important;
            font-weight: bold;
        }

            .navbar-brand img {
                border-radius: 5px;
                height: 40px;
                margin-right: 15px;
            }

        /* Navbar Linkleri */
        .navbar-nav .nav-link {
            text-align: center;
            color: #f8f9fa !important; /* Beyaz renk */
            font-family: 'Roboto', sans-serif !important;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.3s ease;
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107 !important; /* Sarı hover rengi */
                transform: scale(1.1);
            }

        .custom-btn {
            color: #212529 !important;
            background-color: #ffc107; /* Sarı buton */
            border: 1px solid #ffc107;
            font-weight: bold;
        }

            .custom-btn:hover {
                background-color: #e0a800 !important;
                transform: scale(1.05);
            }
    </style>
</head>
@{
    var isLoggedIn = ViewBag.IsLoggedIn as bool?;
}
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell fa-lg me-2"></i> ProFit Gym
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Salon" asp-action="Index">Salonlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Antrenor" asp-action="Index">Antrenörler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Hizmet" asp-action="Index">Hizmetler</a>
                        </li>

                        @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("KullaniciAdi")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Randevu" asp-action="Index">Randevularım</a>
                            </li>

                            @if (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") == "true")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Antrenor" asp-action="Index">Yönet: Antrenör</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Salon" asp-action="Index">Yönet: Salon</a>
                                </li>
                            }
                            else if (HttpContextAccessor.HttpContext.Session.GetString("IsBerberSahibi") == "true")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Salon" asp-action="Index">Salon Yönetimi</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link btn btn-danger btn-sm text-white ms-2" style="padding: 5px 10px;" asp-controller="Kullanici" asp-action="Logout">Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn custom-btn ms-2" href="/Kullanici/Login">
                                    <i class="fas fa-user"></i> Giriş / Kayıt
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>