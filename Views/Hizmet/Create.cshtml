@model BerberYonetimSistemi.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Yeni Hizmet Oluştur</h4>
        </div>
        <div class="card-body">
            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-warning">@TempData["Hata"]</div>
            }

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="UzmanlikAlaniId" class="form-label fw-bold">Kategori / Uzmanlık</label>
                    <select asp-for="UzmanlikAlaniId" class="form-control form-select" asp-items="ViewBag.UzmanlikAlaniId">
                        <option value="">-- Kategori Seçiniz --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="HizmetAdi" class="form-label fw-bold">Hizmet Adı (Örn: PT, Reformer)</label>
                    <input asp-for="HizmetAdi" class="form-control" />
                    <span asp-validation-for="HizmetAdi" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Ucret" class="form-label fw-bold">Ücret (TL)</label>
                        <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Ucret" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Sure" class="form-label fw-bold">Süre (Dakika)</label>
                        <input asp-for="Sure" class="form-control" type="number" value="60" />
                        <span asp-validation-for="Sure" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}