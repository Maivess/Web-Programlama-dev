@model IEnumerable<BerberYonetimSistemi.Models.Hizmet>
@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Hizmet Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Kategori</th>
                <th>Hizmet Adı</th>
                <th>Ücret</th>
                <th>Süre</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UzmanlikAlani?.UzmanlikAlaniAdi</td>
                    <td>@item.HizmetAdi</td>
                    <td>@item.Ucret TL</td>
                    <td>@item.Sure dk</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.HizmetId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.HizmetId" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>