@model BerberYonetimSistemi.Models.Kullanici

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="font-weight-light my-2"><i class="fas fa-sign-in-alt text-warning"></i> Üye Girişi</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adınız" />
                            <label>Kullanıcı Adı / Adınız</label>
                            <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="KullaniciSifre" type="password" class="form-control" placeholder="Şifre" />
                            <label>Şifre</label>
                            <span asp-validation-for="KullaniciSifre" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-block fw-bold text-dark">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-action="Register" class="text-decoration-none text-dark fw-bold">Hesabın yok mu? Kayıt Ol!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}