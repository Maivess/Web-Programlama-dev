@model BerberYonetimSistemi.Models.Salon

@{
    ViewData["Title"] = "Salon Detayları";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>@Model.SalonAdi - Detaylar</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Şehir / İlçe</dt>
                <dd class="col-sm-9">@Model.Sehir / @Model.Ilce</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.Adres</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.Telefon</dd>
            </dl>
            <hr />
            <h4>Antrenör Kadrosu</h4>
            @if (Model.Antrenorler != null && Model.Antrenorler.Count > 0)
            {
                <ul class="list-group">
                    @foreach (var antrenor in Model.Antrenorler)
                    {
                        <li class="list-group-item">@antrenor.AntrenorAdi @antrenor.AntrenorSoyadi</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Henüz antrenör eklenmemiş.</p>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.SalonId" class="btn btn-warning">Düzenle</a>
            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </div>
</div>