@model BerberYonetimSistemi.Models.Salon

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Yeni Şube / Salon Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="SalonAdi" class="control-label fw-bold"></label>
                            <input asp-for="SalonAdi" class="form-control" placeholder="Örn: ProFit Gym - Merkez" />
                            <span asp-validation-for="SalonAdi" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Sehir" class="control-label fw-bold"></label>
                                <input asp-for="Sehir" class="form-control" />
                                <span asp-validation-for="Sehir" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="Ilce" class="control-label fw-bold"></label>
                                <input asp-for="Ilce" class="form-control" />
                                <span asp-validation-for="Ilce" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Adres" class="control-label fw-bold"></label>
                            <textarea asp-for="Adres" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Telefon" class="control-label fw-bold"></label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}