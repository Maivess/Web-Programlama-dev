@model BerberYonetimSistemi.Models.Salon

@{
    ViewData["Title"] = "Salon Düzenle";
}

<div class="container mt-5">
    <h4>Salonu Düzenle</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SalonId" />

                <div class="form-group mb-3">
                    <label asp-for="SalonAdi" class="control-label">Salon Adı</label>
                    <input asp-for="SalonAdi" class="form-control" />
                    <span asp-validation-for="SalonAdi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Sehir" class="control-label">Şehir</label>
                    <input asp-for="Sehir" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ilce" class="control-label">İlçe</label>
                    <input asp-for="Ilce" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Adres" class="control-label">Adres</label>
                    <textarea asp-for="Adres" class="form-control"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Telefon" class="control-label">Telefon</label>
                    <input asp-for="Telefon" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>