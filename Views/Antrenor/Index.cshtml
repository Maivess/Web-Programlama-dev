@model IEnumerable<BerberYonetimSistemi.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Antrenör Listesi</h2>
        <a asp-action="Create" class="btn btn-success">Yeni Antrenör Ekle</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Salon</th>
                <th>Ad Soyad</th>
                <th>Telefon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Salon?.SalonAdi</td>
                    <td>@item.AntrenorAdi @item.AntrenorSoyadi</td>
                    <td>@item.AntrenorTelefon</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-info">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>